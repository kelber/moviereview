
<% if !user_signed_in? %>
<div class="jumbtron">
<div class="well">
<h1>Welcome to Movies Review</h1>
<%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-primary btn-lg" %>
</div>
</div>




<h1>Listing movies</h1>
<% else %>  
<%= link_to 'New Movie', new_movie_path, class: "btn btn-primary btn-lg" %>

<% end %>

<hr>

<table class="table table-bordered table-responsive table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Movie length</th>
      <th>Director</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.title, movie %></td>
        <td><%= movie.description %></td>
        <td><%= movie.movie_length %></td>
        <td><%= movie.director %></td>
        <td><%= movie.rating %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
